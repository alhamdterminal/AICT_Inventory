@model AICTInventoryManagement.Models.Requisition
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <title>Inventory Management Form</title>
    <style>
        body {
            padding-bottom: 100px;
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .form-container {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            padding: 40px;
            margin-top: 50px;
        }

        footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: #343a40;
            color: white;
            text-align: center;
            padding: 10px 0;
            border-top: 1px solid #dee2e6;
        }

        .header {
            text-align: center;
            color: #fff;
            background-color: #007bff;
            padding: 20px 0;
            border-radius: 10px;
            font-size: 2em;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 40px;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .header span {
            font-weight: bold;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        }

        .section-heading {
            margin-top: 30px;
            font-size: 1.6em;
            color: #007bff;
            font-weight: 600;
            border-bottom: 2px solid #007bff;
            padding-bottom: 5px;
            margin-bottom: 20px;
        }

        .form-group label {
            font-weight: bold;
            font-size: 1em;
        }

        .form-control {
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .btn-next, .btn-submit {
            background: linear-gradient(135deg, #007bff, #0056b3);
            border-color: #0056b3;
            color: white;
            padding: 12px 25px;
            border-radius: 8px;
            font-weight: bold;
            transition: background-color 0.3s ease, transform 0.3s ease;
            font-size: 1.1em;
            border: none;
        }

        .btn-next:hover, .btn-submit:hover {
            background-color: #004085;
            transform: scale(1.05);
        }

        .row {
            margin-bottom: 30px;
        }

        .text-right {
            text-align: right;
        }

        
        @@media (max-width: 768px) {
            .form-container {
                padding: 20px;
            }
        }
    </style>
</head>
<body>
    <form asp-action="Create" asp-controller="Home" method="post">
    <div class="container">
        <div class="form-container">
           
            <div class="header">
                <span>Requisition Form</span>
            </div>
            
            
            <ul class="nav nav-tabs" id="formTabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="employee-tab" data-toggle="tab" href="#employee" role="tab" aria-controls="employee" aria-selected="true">Employee Details</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="product-tab" data-toggle="tab" href="#product" role="tab" aria-controls="product" aria-selected="false">Product Details</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="stock-tab" data-toggle="tab" href="#stock" role="tab" aria-controls="stock" aria-selected="false">Stock Details</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pricing-tab" data-toggle="tab" href="#pricing" role="tab" aria-controls="pricing" aria-selected="false">Pricing & Location</a>
                </li>
            </ul>

         
            <div class="tab-content" id="formTabsContent">

                
                <div class="tab-pane fade show active" id="employee" role="tabpanel" aria-labelledby="employee-tab">
                    <div class="section-heading">Employee Details</div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="employeeName">Employee</label>
                                <input type="text" class="form-control" id="employeeName" name="EmployeeName" placeholder="Enter Your Name" required>
                            </div>
                            <div class="form-group">
                                <label for="department">Department</label>
                                <input type="text" class="form-control" id="department" name="Department" placeholder="Enter Department Name" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="requisitionDate">Requisition Date</label>
                                <input type="date" class="form-control" name="RequisitionDate" id="requisitionDate" required>
                            </div>
                            <div class="form-group">
                                <label for="deadline">Requisition Deadline</label>
                                <input type="date" class="form-control" name="Deadline" id="deadline" required>
                            </div>
                        </div>
                    </div>
                    <div class="text-right">
                        <button type="button" class="btn-next" onclick="nextTab('product')">Next</button>
                    </div>
                </div>

                
                <div class="tab-pane fade" id="product" role="tabpanel" aria-labelledby="product-tab">
                    <div class="section-heading">Product Details</div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="itemID">Item ID/SKU</label>
                                <input type="text" class="form-control" id="itemID" name="ItemId" placeholder="Enter Item ID/SKU" required>
                            </div>
                            <div class="form-group">
                                <label for="itemDescription">Item Description</label>
                                <input type="text" class="form-control" id="itemDescription" name="ItemDescription" placeholder="Enter Item Description" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="supplier">Supplier/Vendor</label>
                                <input type="text" class="form-control" id="supplier" name="Supplier" placeholder="Enter Supplier/Vendor" required>
                            </div>
                            <div class="form-group">
                                <label for="category">Category</label>
                                <input type="text" class="form-control" id="category" name="Category" placeholder="Enter Category" required>
                            </div>
                        </div>
                    </div>
                    <div class="text-right">
                        <button type="button" class="btn-next" onclick="nextTab('stock')">Next</button>
                    </div>
                </div>

                
                <div class="tab-pane fade" id="stock" role="tabpanel" aria-labelledby="stock-tab">
                    <div class="section-heading">Stock Details</div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="quantityOnHand">Quantity on Hand</label>
                                <input type="number" class="form-control" id="quantityOnHand" name="QuantityOnHand" placeholder="Enter Quantity on Hand" required>
                            </div>
                            <div class="form-group">
                                <label for="reorderLevel">Reorder Level</label>
                                <input type="number" class="form-control" id="reorderLevel" name="ReorderLevel" placeholder="Enter Reorder Level" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="reorderQuantity">Reorder Quantity</label>
                                <input type="number" class="form-control" id="reorderQuantity" name="ReorderQuantity" placeholder="Enter Reorder Quantity" required>
                            </div>
                            <div class="form-group">
                                <label for="leadTime">Lead Time</label>
                                <input type="text" class="form-control" id="leadTime" name="LeadTime" placeholder="Enter Lead Time" required>
                            </div>
                        </div>
                    </div>
                    <div class="text-right">
                        <button type="button" class="btn-next" onclick="nextTab('pricing')">Next</button>
                    </div>
                </div>

                
                <div class="tab-pane fade" id="pricing" role="tabpanel" aria-labelledby="pricing-tab">
                    <div class="section-heading">Pricing & Location</div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="costPrice">Cost Price</label>
                                <input type="number" step="0.01" class="form-control" id="costPrice" name="CostPrice" placeholder="Enter Cost Price" required>
                            </div>
                            <div class="form-group">
                                <label for="sellingPrice">Selling Price</label>
                                <input type="number" step="0.01" class="form-control" id="sellingPrice" name="SellingPrice" placeholder="Enter Selling Price" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="location">Location</label>
                                <input type="text" class="form-control" id="location" name="Location" placeholder="Enter Location" required>
                            </div>
                        </div>
                    </div>
                    <div class="text-right">
                        <button type="submit" class="btn-submit">Submit</button>
                    </div>
                </div>

            </div>

        </div>
    </div>
    </form>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        function nextTab(tabId) {
            $('#formTabs a[href="#' + tabId + '"]').tab('show');
        }
    </script>
</body>
</html>

